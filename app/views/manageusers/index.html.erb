<div class="container navless-container">
  <a href="/users/manage/new" class="btn btn-success">Add new</a>
  <hr>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created at</th>
      <th><th>
    </tr>
    </thead>
    <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <a href="/users/manage/<%= user.id %>/edit">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <%= user.name %>
      </td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td>
          <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), user_path(user), method: :delete, data: { confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>