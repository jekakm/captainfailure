<div class="container navless-container">
  <%= link_to 'Add new',
              { :controller => :satellites, :action => :new },
              { :class => 'btn btn-success' } %>
  <hr>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @satellites.each do |satellite| %>
        <tr>
          <td>
            <a href="/satellites/<%= satellite.id %>/edit">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <%= satellite.name %>
          </td>
          <td><%= satellite.description %></td>
          <td>
            <% if satellite.status %>
                <span class="label label-success">Online</span>
            <% else %>
                <span class="label label-danger">Offline</span>
            <% end %>
          </td>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), satellite_path(satellite), method: :delete, data: { confirm: 'Are you sure?'} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>