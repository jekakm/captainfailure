<div class="container navless-container">
  <%= link_to 'Add new',
              { :controller => :servers, :action => :new },
              { :class => 'btn btn-success' } %>
  <hr>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>IP</th>
      <th>Comment</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @servers.each do |server| %>
        <tr>
          <td>
            <a href="/servers/<%= server.id %>/edit">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <%= server.dns_name %>
          </td>
          <td><%= server.ip_address %></td>
          <td><%= server.comment %></td>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), server_path(server), method: :delete, data: { confirm: 'Are you sure?'} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>