<div class="container navless-container">
  <%= render partial: 'breadcrumb' %>
  <table class="table table-striped">
    <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Value</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @http_headers.each do |header| %>
        <tr>
          <td>
            <a href="/servers/<%= @check.server_id %>/checks/<%= @check.id %>/http_headers/<%= header.id %>/edit">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </td>
          <td><%= header.name %></td>
          <td><%= header.value %></td>
          <td>
            <%= link_to raw('<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>'), "/servers/#{@check.server_id}/checks/#{@check.id}/http_headers/#{header.id}", method: :delete, data: { confirm: 'Are you sure?'} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'Add', "/servers/#{@check.server_id}/checks/#{@check.id}/http_headers/new", class: 'btn btn-success' %>
</div>